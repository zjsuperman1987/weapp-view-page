/* components/final-custom-view-pager/x-view-page.wxss */

:host {
  display: block;
  position: relative;
  overflow: hidden;
}
/* 头部 */
.header-scroll-view {
  width: 100%;
  border-bottom: 1px solid rgba(0, 0, 0, .5)
  /* box-shadow: 0 1rpx 0 1rpx rgba(175, 80, 80, 0.5) */
}

.header {
  position: relative;
  display: flex;
  height: 70rpx;
}

.header-item {
  display: flex;
  flex: none;
  justify-content: center;
  align-items: center;
  padding: 0 30px;
  box-sizing: border-box;
}
.active-item {
  color: red;
}



/* 底线 */
.bottom-line-wrapper {
  position: absolute;
  bottom: 0;
  height: 2px;
  border-radius: 100px;
  background: gold;
}
.bottom-line {
  position: absolute;
  bottom: 0rpx;
  height: 2px;
  border-radius: 100px;
  background: red;
  transition: width 3s;
}
.move-right-line {
  right: 0;
}
.move-left-line {
  left: 0;
}

/* 内容 */
.swiper {
  height: calc(100% - 70rpx);
  background: rgba(0, 0, 0, .3);
}

/* 滚动 */
x-scroll-view {
  height: 100%;
}