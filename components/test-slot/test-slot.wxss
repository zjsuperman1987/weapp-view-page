/* components/test-slot/test-slot.wxss */


.header-scroll-view {
  width: 100%;
  height: 30px;
  line-height: 30px;
  border-bottom: 1rpx solid #202020;
}

.header {
  display: flex;
  position: relative;
}

.header-item {
  flex: none;
  padding: 0 30px;
  height: 100%;
  text-align: center;
}

/* 下划线 */
.bottom-line-wrapper {
  position: absolute;
  bottom: 0;
  height: 2px;
  border-radius: 100px;
  background: gray;
}
.bottom-line {
  position: absolute;
  height: 2px;
  border-radius: 100px;
  background: red;
}
.bottom-line-left {
  left: 0;
}
.bottom-line-right {
  right: 0;
}